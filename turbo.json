{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build:code": {
      "dependsOn": [
        "^build:code"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**"
      ],
      "cache": true
    },
    "build:types": {
      "dependsOn": [
        "^build:code"
      ],
      "outputs": [
        "temp/types/**",
        "types/**"
      ],
      "cache": true
    },
    "build:doc": {
      "dependsOn": [
        "^build:types",
        "^build:doc"
      ],
      "outputs": [
        "$TURBO_ROOT$/apps/docs/src/api-reference/**"
      ],
      "inputs": [
        "types/*.api.json"
      ],
      "cache": false
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
