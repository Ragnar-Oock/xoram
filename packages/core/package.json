{
  "name": "@zoram/core",
  "version": "0.0.0",
  "description": "zoram core",
  "type": "module",
  "scripts": {
    "lint": "oxlint",
    "test:watch": "vitest watch --typecheck",
    "build": "node ./script/build.script.mjs",
    "build:prod": "vite build --mode production",
    "build:dev": "NODE_ENV=development vite build --mode development"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./src/index.ts",
        "default": "./dist/core.production.js"
      }
    },
    "./dev": {
      "import": {
        "types": "./src/index.ts",
        "default": "./dist/core.development.js"
      }
    }
  },
  "devDependencies": {
    "@repo/config-typescript": "workspace:*",
    "@repo/config-vite": "workspace:*",
    "oxlint": "^0.16.8",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vitest": "3.1.2"
  },
  "dependencies": {
    "mitt": "^3.0.1"
  }
}
